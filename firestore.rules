rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /Feed/{postId} {
    	 // only authenticated users can read and write to all posts
      allow read, write: if request.auth != null;
      
      // only authenticated users can create new posts
      // server-side length validation of post body and title
      allow create: if request.auth != null
                    && request.resource.data.authorId == request.auth.uid
                    && request.resource.data.title is string
                    && request.resource.data.title.size() > 0
                    && request.resource.data.title.size() <= 50
                    && request.resource.data.content is string
                    && request.resource.data.content.size() <= 500;

      // only authors of the post and admins can delete a post
      allow delete: if request.auth != null
              && ((request.auth.token.admin == true) || (resource.data.authorId == request.auth.uid));
    }
    
    match /Users/{userId} {
  		allow read, write: if request.auth != null;
		}

		match /AdminStats/{docId} {
  		allow read, write: if request.auth != null;
		}
  }
}
